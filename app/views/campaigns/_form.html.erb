
  <%= form_for(@campaign, class: "form-horizontal") do |f| %>
  <% if @campaign.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@campaign.errors.count, "error") %> no permitieron guardar el registro de campaign:</h2>

    <ul>
      <% @campaign.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

        <div class="form-group">
        

                    <%= f.label "Nombre", class: "col-lg-2 control-label"%>
                    <div class="col-lg-6">
                      <%= f.text_field :name , class: "form-control"%>
                    </div>
                
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        

                    <%= f.label "Tipo" , class: "col-lg-2 control-label"%>
                    <div class="col-lg-6">
                      <%= f.select :campaignType , options_for_select(Campaign::TYPE.collect { |type|
                                                               [type.to_s.titleize] }), {required: true}, {class:"chosen-select", style: "width:350px;" } %>

                    </div>
                
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        
                    <%= f.label "Finaliza" , class: "col-lg-2 control-label"%>
                    <div class="col-sm-5">
                      <div class="form-group" id="data_1">
                        <div class="input-group date">
                          <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                          <%= f.text_field :finish , class: "form-control"%>
                        </div>
                      </div>
                    </div>


              </div><br><div class="hr-line-dashed"></div>

  
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= link_to campaigns_path, class: "btn btn-outline btn-danger pull-left" do%>
        <i class="fa fa-list-ol"></i> Cancelar
      <% end %>
      <%= button_tag(type: 'submit', class: "btn btn-outline btn-primary pull-right") do %>
          <i class="fa fa-database"></i> Guardar
      <% end %>
    </div>



  </div>
  <br><br>
  <% end %>


  <% content_for :javascript do %>

      <script type="text/javascript">


          var config = {
              '.chosen-select'           : {},
              '.chosen-select-deselect'  : {allow_single_deselect:true},
              '.chosen-select-no-single' : {disable_search_threshold:10},
              '.chosen-select-no-results': {no_results_text:'No existen registros!'},
              '.chosen-select-width'     : {width:"95%"}
          };
          for (var selector in config) {
              $(selector).chosen(config[selector]);
          }


          $('#data_1 .input-group.date').datepicker({
              todayBtn: "linked",
              keyboardNavigation: false,
              forceParse: false,
              calendarWeeks: true,
              autoclose: true
          });

      </script>
  <% end %>
