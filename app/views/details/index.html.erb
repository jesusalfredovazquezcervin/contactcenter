<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Listado de details </h2>

    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path  %>
      </li>
      <li>
        Catalogos
      </li>
      <li class="active">
        <strong><%= link_to 'detail', details_path  %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to 'Nuevo Detail', new_detail_path, class: "btn btn-outline btn-warning" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="m-l-sm">En esta pantalla se muestran los registros de  detail</small>
          <div class="ibox-tools">
              Total registros: <%= @details.count %>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                                    <th>Company</th>
                                    <th>Campaign</th>
                                    <th>User</th>
                                <th>&nbsp;&nbsp;Acciones&nbsp;&nbsp;</th>

              </tr>
              </thead>

              <tbody>
              <% @details.each do |detail| %>
              <tr>
                                    <td>


                        <%= Company.find_by_id(detail.company_id).name %>
                    </td>


                                    <td>


                        <%= Campaign.find_by_id(detail.campaign_id).name %>
                    </td>


                                    <td>


                        <%= User.find_by_id(detail.user_id).name %>
                    </td>


                                <td>
                  <%= link_to  detail do %>
                      <i class="fa fa-eye" title="Ver"></i>
                  <% end %>&nbsp;
                  <%= link_to edit_detail_path(detail) do %>
                      <i class="fa fa-pencil" title="Modificar"></i>
                  <% end %>&nbsp;
                  <%= link_to detail, method: :delete,  data: { confirm: '¿Está seguro, se eliminara permanentemente?'} do %>
                      <i class="fa fa-trash-o" title="Eliminar"></i>
                  <% end %>

                </td>
              </tr>
              <% end %>
              </tbody>
          </table>



        </div>
      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.footable').footable();
            $('.footable2').footable();

            $('.dataTables-example').dataTable({
                "order": [[ 0, "desc" ]],
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

        });

    </script>

<% end %>