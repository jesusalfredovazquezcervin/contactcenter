<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Listado de companies </h2>

    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path  %>
      </li>
      <li>
        Catalogos
      </li>
      <li class="active">
        <strong><%= link_to 'company', companies_path  %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to 'Nuevo Company', new_company_path, class: "btn btn-outline btn-warning" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="m-l-sm">En esta pantalla se muestran los registros de  company</small>
          <div class="ibox-tools">
              Total registros: <%= @companies.count %>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                                    <th>Tradename</th>
                                    <th>Businessname</th>
                                    <th>Rfc</th>
                                    <th>Employees</th>
                                    <th>Comercialbusiness</th>
                                    <th>Sector</th>
                                    <th>Contacto</th>
                                <th>&nbsp;&nbsp;Acciones&nbsp;&nbsp;</th>

              </tr>
              </thead>

              <tbody>
              <% @companies.each do |company| %>
              <tr>
                                    <td>
                        <%= company.tradeName %>
                    </td>


                                    <td>
                        <%= company.businessName %>
                    </td>


                                    <td>
                        <%= company.rfc %>
                    </td>


                                    <td>
                        <%= company.employees %>
                    </td>


                                    <td>
                        <%= company.comercialBusiness %>
                    </td>


                                    <td>
                        <%= company.sector %>
                    </td>
                    <td><%= Contact.find_by_id(company.contact_id).try(:name) %></td>

                                <td>
                  <%= link_to  company do %>
                      <i class="fa fa-eye" title="Ver"></i>
                  <% end %>&nbsp;
                  <%= link_to edit_company_path(company) do %>
                      <i class="fa fa-pencil" title="Modificar"></i>
                  <% end %>&nbsp;
                  <%= link_to company, method: :delete,  data: { confirm: '¿Está seguro, se eliminara permanentemente?'} do %>
                      <i class="fa fa-trash-o" title="Eliminar"></i>
                  <% end %>

                </td>
              </tr>
              <% end %>
              </tbody>
          </table>



        </div>
      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.footable').footable();
            $('.footable2').footable();

            $('.dataTables-example').dataTable({
                "order": [[ 0, "desc" ]],
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

        });

    </script>

<% end %>