<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Monstrando un registro de addresses </h2>

    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path  %>
      </li>
      <li>
        Catalogos
      </li>
      <li class="active">
        <strong><%= link_to 'address', addresses_path  %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to 'Nuevo Address', new_address_path, class: "btn btn-outline btn-warning" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="m-l-sm">En esta pantalla se muestran los valores de un registro de address</small>
          <div class="ibox-tools">
            Mostrando el registro: <strong> <%= @address.id%></strong>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>

        <div class="ibox-content">

          <div class="form-group">

            <h4>Nombre:</h4>
            <div class="col-sm-5">
              <%= @address.name%>
            </div><br>
          </div>
                            <div class="form-group">

                          <h4>Calle:</h4>
                          <div class="col-sm-5">
                            <%= @address.street %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>No. interno:</h4>
                          <div class="col-sm-5">
                            <%= @address.internal %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>No. Externo:</h4>
                          <div class="col-sm-5">
                            <%= @address.external %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>Colonia:</h4>
                          <div class="col-sm-5">
                            <%= @address.suburb %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>Deleg/Mun:</h4>
                          <div class="col-sm-5">
                            <%= @address.municipality %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>Localidad:</h4>
                          <div class="col-sm-5">
                            <%= @address.location %>
                          </div><br>
                  </div>
                            <div class="form-group">

                      <h4>Estado:</h4>
                      <div class="col-sm-5">
                        <%= State.find_by_id(@address.state_id).name %>
                          </div><br><div class="hr-line-dashed"></div>
                  </div>
                            <div class="form-group">

                          <h4>Codigo posta:</h4>
                          <div class="col-sm-5">
                            <%= @address.postalCode %>
                          </div><br>
                  </div>
                            <div class="form-group">

                          <h4>Ciudad:</h4>
                          <div class="col-sm-5">
                            <%= @address.city %>
                          </div><br>
                  </div>

            <div class="form-group">
              <div class="col-sm-6 col-sm-offset-2">
                <%= link_to addresses_path, class: "btn btn-outline btn-danger pull-left" do%>
                <i class="fa fa-list-ol"></i> Listado
                <% end %>

                <%= link_to edit_address_path(@address) , class: "btn btn-outline btn-primary pull-right" do %>
                  <i class="fa fa-pencil"></i> Modificar
                <% end %>
              </div>
            </div><br><br>
        </div>



      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

<script type="text/javascript">


    $(function() {

        $('.footable').footable();
        $('.footable2').footable();

        $('.dataTables-example').dataTable({
            "order": [[ 0, "desc" ]],
            "dom": 'T<"clear">lfrtip',
            "tableTools": {
                "sSwfPath": "../../assets/dataTables/swf/copy_csv_xls_pdf.swf"
            }
        });

    });

</script>

<% end %>