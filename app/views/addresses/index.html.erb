<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Listado de addresses </h2>

    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path  %>
      </li>
      <li>
        Catalogos
      </li>
      <li class="active">
        <strong><%= link_to 'address', addresses_path  %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to 'Nuevo Address', new_address_path, class: "btn btn-outline btn-warning" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="m-l-sm">En esta pantalla se muestran los registros de  address</small>
          <div class="ibox-tools">
              Total registros: <%= @addresses.count %>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                                    <th>Street</th>
                                    <th>Internal</th>
                                    <th>External</th>
                                    <th>Suburb</th>
                                    <th>Municipality</th>
                                    <th>Location</th>
                                    <th>State</th>
                                    <th>Postalcode</th>
                                    <th>City</th>
                                    <th>Contact</th>
                                <th>&nbsp;&nbsp;Acciones&nbsp;&nbsp;</th>

              </tr>
              </thead>

              <tbody>
              <% @addresses.each do |address| %>
              <tr>
                                    <td>
                        <%= address.street %>
                    </td>


                                    <td>
                        <%= address.internal %>
                    </td>


                                    <td>
                        <%= address.external %>
                    </td>


                                    <td>
                        <%= address.suburb %>
                    </td>


                                    <td>
                        <%= address.municipality %>
                    </td>


                                    <td>
                        <%= address.location %>
                    </td>


                                    <td>


                        <%= State.find_by_id(address.state_id).name %>
                    </td>


                                    <td>
                        <%= address.postalCode %>
                    </td>


                                    <td>
                        <%= address.city %>
                    </td>


                                    <td>


                        <%= Contact.find_by_id(address.contact_id).name %>
                    </td>


                                <td>
                  <%= link_to  address do %>
                      <i class="fa fa-eye" title="Ver"></i>
                  <% end %>&nbsp;
                  <%= link_to edit_address_path(address) do %>
                      <i class="fa fa-pencil" title="Modificar"></i>
                  <% end %>&nbsp;
                  <%= link_to address, method: :delete,  data: { confirm: '¿Está seguro, se eliminara permanentemente?'} do %>
                      <i class="fa fa-trash-o" title="Eliminar"></i>
                  <% end %>

                </td>
              </tr>
              <% end %>
              </tbody>
          </table>



        </div>
      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

    <script type="text/javascript">


        $(function() {

            $('.footable').footable();
            $('.footable2').footable();

            $('.dataTables-example').dataTable({
                "order": [[ 0, "desc" ]],
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

        });

    </script>

<% end %>