
  <%= form_for(@call, class: "form-horizontal") do |f| %>
  <% if @call.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@call.errors.count, "error") %> no permitieron guardar el registro de call:</h2>

    <ul>
      <% @call.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

        <div class="form-group">
        
           <%= f.label :company_id, class: "col-lg-2 control-label" %>
           <div class="col-lg-6">
             <%= f.select :company_id, options_for_select( Company.all.collect { |company|
                                                              [company.name, company.id] }, @call.company_id), {}, {class: "chosen-select", style: "width:350px;" } %>
           </div><br><div class="hr-line-dashed"></div>
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        
           <%= f.label :campaign_id, class: "col-lg-2 control-label" %>
           <div class="col-lg-6">
             <%= f.select :campaign_id, options_for_select( Campaign.all.collect { |campaign|
                                                              [campaign.name, campaign.id] }, @call.campaign_id), {}, {class: "chosen-select", style: "width:350px;" } %>
           </div><br><div class="hr-line-dashed"></div>
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        

                    <%= f.label :result , class: "col-lg-2 control-label"%>
                    <div class="col-lg-6">
                      <%= f.text_field :result , class: "form-control"%>
                    </div>
                
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        

                    <%= f.label :status , class: "col-lg-2 control-label"%>
                    <div class="col-lg-6">
                      <%= f.text_field :status , class: "form-control"%>
                    </div>
                
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        

                    <%= f.label :later , class: "col-lg-2 control-label"%>
                    <div class="col-lg-6">
                      <%= f.datetime_select :later , class: "form-control"%>
                    </div>
                
              </div><br><div class="hr-line-dashed"></div>

        <div class="form-group">
        
           <%= f.label :user_id, class: "col-lg-2 control-label" %>
           <div class="col-lg-6">
             <%= f.select :user_id, options_for_select( User.all.collect { |user|
                                                              [user.name, user.id] }, @call.user_id), {}, {class: "chosen-select", style: "width:350px;" } %>
           </div><br><div class="hr-line-dashed"></div>
              </div><br><div class="hr-line-dashed"></div>

  
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <%= link_to calls_path, class: "btn btn-outline btn-danger pull-left" do%>
        <i class="fa fa-list-ol"></i> Cancelar
      <% end %>
      <%= button_tag(type: 'submit', class: "btn btn-outline btn-primary pull-right") do %>
          <i class="fa fa-database"></i> Guardar
      <% end %>
    </div>



  </div>
  <br><br>
  <% end %>


  <% content_for :javascript do %>

      <script type="text/javascript">


          var config = {
              '.chosen-select'           : {},
              '.chosen-select-deselect'  : {allow_single_deselect:true},
              '.chosen-select-no-single' : {disable_search_threshold:10},
              '.chosen-select-no-results': {no_results_text:'No existen registros!'},
              '.chosen-select-width'     : {width:"95%"}
          };
          for (var selector in config) {
              $(selector).chosen(config[selector]);
          }

          $('.clockpicker').clockpicker();

          $('#data_1 .input-group.date').datepicker({
              todayBtn: "linked",
              keyboardNavigation: false,
              forceParse: false,
              calendarWeeks: true,
              autoclose: true
          });

      </script>
  <% end %>
