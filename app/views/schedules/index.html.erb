<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Listado de schedules </h2>

    <ol class="breadcrumb">
      <li>
        <%= link_to 'Home', root_path %>
      </li>
      <li>
        Catalogos
      </li>
      <li class="active">
        <strong><%= link_to 'schedule', schedules_path %></strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <%= link_to 'Nuevo Schedule', new_schedule_path, class: "btn btn-outline btn-warning" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <small class="m-l-sm">En esta pantalla se muestran los registros de schedule</small>
          <div class="ibox-tools">
            Total registros: <%= @schedules.count %>
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <table class="table table-striped table-bordered table-hover dataTables-example">
            <thead>
            <tr>
              <th>Nombre</th>
              <th>Compañia</th>
              <th>Lunes</th>
              <th>Martes</th>
              <th>Miercoles</th>
              <th>Jueves</th>
              <th>Viernes</th>
              <th>Sabado</th>
              <th>Domingo</th>
              <th>&nbsp;&nbsp;Acciones&nbsp;&nbsp;</th>

            </tr>
            </thead>

            <tbody>
            <% @schedules.each do |schedule| %>
                <tr>

                  <td>
                    <%= schedule.name %>
                  </td>
                  <td>
                    <%=  schedule.company.tradeName %>
                  </td>

                  <td>
                    <%= schedule.mondayStart %>
                  </td>


                  <td>
                    <%= schedule.mondayEnd %>
                  </td>


                  <td>
                    <%= schedule.tuesdayStart %>
                  </td>


                  <td>
                    <%= schedule.tuesdayEnd %>
                  </td>


                  <td>
                    <%= schedule.wednesdayStart %>
                  </td>


                  <td>
                    <%= schedule.wednesdayEnd %>
                  </td>


                  <td>
                    <%= schedule.thursdayStart %>
                  </td>



                  <td>
                    <%= link_to schedule do %>
                        <i class="fa fa-eye" title="Ver"></i>
                    <% end %>&nbsp;
                    <%= link_to edit_schedule_path(schedule) do %>
                        <i class="fa fa-pencil" title="Modificar"></i>
                    <% end %>&nbsp;
                    <%= link_to schedule, method: :delete, data: {confirm: '¿Está seguro, se eliminara permanentemente?'} do %>
                        <i class="fa fa-trash-o" title="Eliminar"></i>
                    <% end %>

                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>


        </div>
      </div>
    </div>
  </div>
</div>


<% content_for :javascript do %>

    <script type="text/javascript">


        $(function () {

            $('.footable').footable();
            $('.footable2').footable();

            $('.dataTables-example').dataTable({
                "order": [[0, "desc"]],
                "dom": 'T<"clear">lfrtip',
                "tableTools": {
                    "sSwfPath": "../../assets/dataTables/swf/copy_csv_xls_pdf.swf"
                }
            });

        });

    </script>

<% end %>